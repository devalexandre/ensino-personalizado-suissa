.molecule-toolbar
   display flex
   width 100%
   height 5vh
   background-color $toolbar-background
   color #ffffff
   .atom-toolbar-control
      background: none !important;
      color: inherit;
      border: none;
      padding: 0! important;
      font: inherit;
      cursor: pointer;
      outline: inherit !important;  
      width 10
       
   .atom-navbar
      display flex
      width 100%
      list-style none
      line-height 5vh
      .atom-navbar-title
         width 10vw
         a 
            text-decoration none
            color #ffffff
      .molecule-navbar-items
         display flex
         justify-content flex-end    
         align-self: flex-end
         width auto 
         list-style none
      .atom-navbar-item
         width: 5vw
         a 
            text-decoration none
            color #ffffff


+for_breakpoint(desktop)
   .atom-toolbar-control
      display none

   
+for_breakpoint(mobile)
   .atom-toolbar-control
      display block
   .atom-navba
      flex-direction row
      justify-content center