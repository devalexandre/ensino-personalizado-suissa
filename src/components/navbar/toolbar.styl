.molecule-toolbar
   display flex
   width 100%
   height 5vh
   color #ffffff
   background-color $toolbar-background
  .atom-toolbar-control
    background none !important
    color inherit
    border none
    padding 0! important
    font inherit
    cursor pointer
    outline inherit !important
    width 10
    @media $desktop
       display none
    @media $mobile
       display block
   .atom-navbar-title
	width 10vw
	line-height 3vw
	a
	  text-decoration none
	  color #ffffff
.molecule-navbar-items
   display flex
   justify-content flex-end
   align-self flex-end
   width 200vh
   list-style none
   .atom-navbar-item
      width 5vw
      @media $mobile
        flex-direction column
	  width 100%
        justify-content center 
      a
         text-decoration none
         color #ffffff